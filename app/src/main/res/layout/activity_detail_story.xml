<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/detailContainer"
    android:background="#EAEFF1"
    tools:context=".DetailStoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rel1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="-5dp"
        android:id="@+id/detailStoryTitleEn"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

        <ImageView
            android:layout_marginTop="-5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/detailImg"
            android:layout_below="@+id/detailStoryTitleEn"
            android:layout_width="350dp"
            android:layout_height="300dp"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/detailStoryDesc"
        android:layout_below="@+id/detailImg"
        android:textSize="21dp"
        android:lineSpacingExtra="2dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />


        <Button
            android:drawableStart="@drawable/ic_russia"
            android:paddingStart="23dp"
            android:textSize="23dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:paddingEnd="30dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnTranslate"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="60dp"
            android:layout_below="@id/detailStoryDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/translation_ru_button" />

    </RelativeLayout>

    </ScrollView>


</LinearLayout>